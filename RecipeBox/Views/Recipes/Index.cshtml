@{
  Layout = "_Layout";
}

<!-- @using System.Linq; -->
@using RecipeBox.Models;
@model List<RecipeBox.Models.Recipe>;

<!-- <h1>Recipes for @User.Identity.Name</h1> -->
<h1>Recipes</h1>
<hr />
@if(Model.Count == 0)
{
  <h3>No recipes have been added yet.</h3>
}
else
{
  <ul>
    @foreach(Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Title}", "Details", new { id = recipe.RecipeId})</li>
    }
  </ul>
}
